{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(local);Database=QuickApp;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  //Note: In Production (Use HTTPS) change this to your actual host (e.g. https://quickapp.ebenmonney.com)
  "AuthServerUrl": "http://localhost:5000",
  "https_port": 5001, //Set this for https redirection (e.g. 443)

  "SmtpConfig": {
    "Host": "mail.example.com",
    "Port": 25,
    "UseSSL": false,
    "Name": "QuickApp Template",
    "Username": "your@email.com",
    "EmailAddress": "your@email.com",
    "Password": "YourPassword"
  },

  // LogLevel Severity: "Trace", "Debug", "Information", "Warning", "Error", "Critical", "None"
  "Logging": {
    "PathFormat": "Logs/log-{Date}.log",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
